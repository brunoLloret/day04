generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Book {
id Int @id @default(autoincrement())
title String
ISBN Int

genre Genre[]

authorId Int
memberId Int?


author Author @relation(fields: [authorId], references: [id])
rentedBy Member? @relation(fields:[memberId], references: [id])
}

model Author {
id Int @id @default(autoincrement())
name String
biography String

book Book[]
}


model Genre {
id Int @unique @default(autoincrement())
name String
bookId Int

book Book @relation(fields: [bookId], references: [id])

}


model Member {
id Int @unique @default(autoincrement())
name String
email String
address String

bookId Int

borrowedBook Book[]
}

